{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": [
      "esnext"
    ],
    "target": "esnext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "src/",
    "allowJs": true,
    "declaration": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/",
    "utils/",
    "test/",
  ]
}
